<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowAnimationStyle">@style/MyTransition.Activity</item>
        <item name="android:fontFamily">@font/azo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="AppTheme.Light" parent="AppTheme">

        <item name="android:navigationBarColor">#7084AA</item>
        <item name="android:statusBarColor">#7084AA</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorSecondary">@color/lightBg</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorTertiary">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="editTextStyle">@style/EditText.Light</item>
        <item name="toolbarStyle">@style/Toolbar.Light</item>
        <item name="colorControlHighlight">#33000000</item>
        <item name="android:windowBackground">@android:color/white</item>

    </style>

    <style name="Toolbar.Light" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/lightBg</item>
        <item name="android:elevation">1dp</item>
        <item name="android:textColorPrimary">@android:color/black</item>

    </style>

    <style name="EditText.Light" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:backgroundTint">@color/darkBg</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="android:navigationBarColor">#010101</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorSecondary">@android:color/black</item>
        <item name="android:textColorTertiary">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="toolbarStyle">@style/Toolbar.Dark</item>
        <item name="editTextStyle">@style/EditText.Dark</item>
        <item name="android:windowBackground">@color/darkBg</item>
    </style>

    <style name="Toolbar.Dark" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">#000000</item>
        <item name="android:elevation">1dp</item>

    </style>

    <style name="EditText.Dark" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/lightBg</item>
    </style>

    <style name="MyTransition.Activity" parent="android:Animation.Activity">

        <item name="android:activityOpenEnterAnimation">@anim/next_act_from_right_to_left</item>
        <item name="android:activityOpenExitAnimation">@anim/curr_act_go_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/prev_act_from_left_to_right</item>
        <item name="android:activityCloseExitAnimation">@anim/curr_act_go_to_right</item>

    </style>

    <style name="dTheme.Light" parent="AppTheme.Light">
        <item name="android:windowAnimationStyle">@style/DialogTransition.Activity</item>
    </style>

    <style name="dTheme.Dark" parent="AppTheme.Dark">
        <item name="android:windowAnimationStyle">@style/DialogTransition.Activity</item>
    </style>

    <style name="DialogTransition.Activity" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/next_act_from_right_to_left</item>
        <item name="android:activityOpenExitAnimation">@anim/curr_act_go_to_left</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>

    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="windowFixedWidthMajor">90%</item>
        <item name="windowFixedHeightMajor">80%</item>
        <item name="android:textSize">15dp</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>

    </style>

    <style name="DialogTheme.Light" parent="DialogTheme">

        <item name="android:fontFamily">@font/azo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="toolbarStyle">@style/Toolbar.Light</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorSecondary">@color/lightBg</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>

    </style>

    <style name="DialogTheme.Dark" parent="DialogTheme">

        <item name="android:fontFamily">@font/azo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="toolbarStyle">@style/Toolbar.Dark</item>
        <item name="colorPrimaryDark">@color/darkBg</item>
        <item name="colorSecondary">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>

    </style>

    <style name="ConfirmTheme.Light" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:background">#E6E6E6</item>
        <item name="android:textAppearanceSmall">@style/azo2</item>
    </style>

    <style name="ConfirmTheme.Dark" parent="Widget.AppCompat.ButtonBar.AlertDialog">

        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundTint">#1A1A1A</item>
        <item name="android:textAppearanceSmall">@style/azo2</item>
    </style>

    <style name="azo">
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">@font/azo</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="azo2">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/azo</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="azo3">
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>