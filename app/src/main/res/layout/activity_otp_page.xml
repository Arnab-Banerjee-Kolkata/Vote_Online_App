<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OtpPage">
    <WebView
        android:id="@+id/wv3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbarotp"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Authenticate"
        app:titleTextAppearance="@style/azo" />

    <ImageView
        android:id="@+id/otpbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitEnd"
        android:alpha=".1"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Once your identity is verified an OTP will be sent to your registered phone number. Please show it to the polling officer present in the polling booth."
        android:padding="10dp"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarotp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booth ID -" />

        <EditText
            android:id="@+id/boothid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:inputType="text"
            android:paddingStart="10dp"
            tools:ignore="LabelFor,RtlSymmetry"
            android:importantForAutofill="no" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Enter the 6-digit booth OTP provided by the polling officer : "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47"/>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <EditText
            android:id="@+id/otp1"
            android:layout_width="50dp"
            android:hint="0"
            android:textColorHint="#4D808080"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
            android:inputType="textCapCharacters|textNoSuggestions"
            android:maxLength="1"
            android:textSize="28dp"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/otp2"
            android:layout_width="50dp"
            android:hint="0"
            android:textColorHint="#4D808080"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
            android:inputType="textCapCharacters|textNoSuggestions"
            android:maxLength="1"
            android:textSize="28dp"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/otp3"
            android:layout_width="50dp"
            android:hint="0"
            android:textColorHint="#4D808080"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
            android:inputType="textCapCharacters|textNoSuggestions"
            android:maxLength="1"
            android:textSize="28dp"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/otp4"
            android:layout_width="50dp"
            android:hint="0"
            android:textColorHint="#4D808080"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
            android:inputType="textCapCharacters|textNoSuggestions"
            android:maxLength="1"
            android:textSize="28dp"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/otp5"
            android:layout_width="50dp"
            android:hint="0"
            android:textColorHint="#4D808080"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
            android:inputType="textCapCharacters|textNoSuggestions"
            android:maxLength="1"
            android:textSize="28dp"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/otp6"
            android:layout_width="50dp"
            android:hint="0"
            android:textColorHint="#4D808080"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
            android:inputType="textCapCharacters|textNoSuggestions"
            android:maxLength="1"
            android:textSize="28dp"
            android:importantForAutofill="no" />

    </LinearLayout>

    <Button
        android:id="@+id/verifybut"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/buttonbg"
        android:text="Verify"
        android:textAllCaps="false"
        app:backgroundTint="@color/button"
        app:layout_constraintBottom_toBottomOf="@+id/otpbg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>